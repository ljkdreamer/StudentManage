<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD 
    Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ljk.programmer.dao.GradeDao">

  

  <insert id="add" parameterType="Grade" >
     insert into grade(id,name,remark) values(null,#{name},#{remark})  
  </insert>      

<select id="findList" parameterType="Map"  resultType="Grade">

  select *  from grade where name like #{name}
   limit #{offset},#{pageSize}

</select>


  <select id="getTotal"  parameterType="Map" resultType="Integer">
     select count(id)  from grade where name like #{name}
  </select>


  <update id="eidt" parameterType="Grade"  >
  
     update grade SET name=#{name},
     remark=#{remark} where id=#{id}
  </update>
  
  <delete id="delete"  >
        
     delete from grade where 
     id in ${value}
  
  </delete>
  
  <select id="findAll"  resultType="Grade">

  select *  from grade 
  

</select>


</mapper>